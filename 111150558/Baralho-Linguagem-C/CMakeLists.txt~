project(Baralho)

INCLUDES = -I. -I ./src/ \

SET (Baralho_SRC embaralhar.c corta.c descarte.c retira.c)

add_library(Baralho SHARED ${Baralho_SRC})
add_executable(aplicacao  aplicacao.c)

target_link_libraries(aplicacao Baralho)


ENABLE_TESTING()

INCLUDES = -I. -I ./Testes/ \

add_executable(minunit minunit.c)

target_link_libraries(somador_test Soma)

add_test(TestSomador somador_test)



INCLUDE(CTest)
IF(BUILD_TESTING)
     SET(BUILDNAME "${BUILDNAME}" CACHE STRING "Outros testes")
     MARK_AS_ADVANCED(BUILDNAME)
ENDIF(BUILD_TESTING)
